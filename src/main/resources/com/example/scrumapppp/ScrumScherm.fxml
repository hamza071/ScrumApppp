<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.scrumapppp.Controller.ScrumController"
      fx:id="mainLayout" spacing="0.0">

    <!-- Bovenbalk wordt dynamisch toegevoegd in de controller -->

    <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="700.0" prefWidth="1000.0">
        <content>
            <HBox fx:id="boardHBox" spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                <!-- Lijsten worden hier dynamisch toegevoegd -->
            </HBox>
        </content>
    </ScrollPane>
</VBox>
