<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23" fx:controller="com.example.scrumapppp.Controller.InlogController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label text="Gebruikersnaam:" />
    <TextField fx:id="gebruikersnaamField" promptText="Voer je gebruikersnaam in" />

    <Button onAction="#handleInloggen" text="Inloggen" />

    <Button onAction="#handleRegistreren" text="Registreren" />
</VBox>
