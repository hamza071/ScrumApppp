<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scrumapppp.Controller.InlogController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <AnchorPane prefHeight="1080.0" prefWidth="1920.0">
      <children>
      
          <Label layoutX="652.0" layoutY="219.0" prefHeight="55.0" prefWidth="255.0" text="Gebruikersnaam:" textAlignment="CENTER">
            <font>
               <Font size="33.0" />
            </font>
         </Label>
          <TextField fx:id="gebruikersnaamField" layoutX="606.0" layoutY="301.0" prefHeight="43.0" prefWidth="346.0" promptText="Voer je gebruikersnaam in" />
      
          <Label layoutX="682.0" layoutY="445.0" text="Wachtwoord:">
            <font>
               <Font size="33.0" />
            </font>
         </Label>
          <PasswordField fx:id="wachtwoordField" layoutX="607.0" layoutY="538.0" prefHeight="43.0" prefWidth="346.0" promptText="Voer je wachtwoord in" />
      
          <Button layoutX="633.0" layoutY="680.0" onAction="#handleInloggen" prefHeight="64.0" prefWidth="294.0" text="Inloggen">
            <font>
               <Font size="33.0" />
            </font>
         </Button>
      
          <Label fx:id="statusLabel" text="" />
      </children>
   </AnchorPane>
</VBox>
