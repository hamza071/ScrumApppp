<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scrumapppp.Controller.TeamSelectController">
    <children>
        <AnchorPane VBox.vgrow="ALWAYS">

            <AnchorPane style="-fx-background-image: url('/images/wallpaper.jpg'); -fx-background-size: cover;" />

            <Label alignment="CENTER" layoutX="746.0" layoutY="117.0" prefHeight="82.0" prefWidth="486.0" text="Join Team" textAlignment="CENTER">
                <font><Font size="33.0" /></font>
            </Label>

            <Label layoutX="593.0" layoutY="239.0" text="Selecteer Team">
                <font><Font size="21.0" /></font>
            </Label>
            <ComboBox fx:id="teamComboBox" layoutX="740.0" layoutY="237.0" prefHeight="49.0" prefWidth="499.0" />

            <Button fx:id="joinTeamButton" layoutX="885.0" layoutY="351.0" onAction="#handleJoinButtonClick" prefHeight="95.0" prefWidth="229.0" text="Join Team">
                <font><Font size="33.0" /></font>
            </Button>

            <!-- Alleen deze knop blijft zichtbaar -->
            <Button fx:id="createTeamButton" layoutX="885.0" layoutY="620.0" onAction="#handleCreateButtonClick" prefHeight="95.0" prefWidth="229.0" text="Create">
                <font><Font size="33.0" /></font>
            </Button>

        </AnchorPane>
    </children>
</VBox>
