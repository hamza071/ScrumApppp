<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scrumapppp.Controller.TeamSelectController">
    <children>
        <AnchorPane VBox.vgrow="ALWAYS">

            <Label layoutX="746.0" layoutY="117.0" prefHeight="82.0" prefWidth="486.0"
                   text="Join Team" textAlignment="CENTER" alignment="CENTER">
                <font><Font size="33.0" /></font>
            </Label>

            <Label fx:id="welkomLabel" layoutX="100" layoutY="50" text="Welkom!" />


            <Label layoutX="593.0" layoutY="239.0" text="Selecteer Team">
                <font><Font size="21.0" /></font>
            </Label>
            <ComboBox fx:id="teamComboBox" layoutX="740.0" layoutY="237.0" prefHeight="49.0" prefWidth="499.0" />

            <Button fx:id="joinTeamButton" layoutX="885.0" layoutY="351.0"
                    onAction="#handleJoinTeam" prefHeight="95.0" prefWidth="229.0" text="Join Team">
                <font><Font size="33.0" /></font>
            </Button>

            <Label layoutX="744.0" layoutY="520.0" prefHeight="82.0" prefWidth="486.0"
                   text="Create" textAlignment="CENTER" alignment="CENTER">
                <font><Font size="33.0" /></font>
            </Label>

            <Label layoutX="612.0" layoutY="626.0" text="Naam:">
                <font><Font size="21.0" /></font>
            </Label>
            <TextField fx:id="teamNameField" layoutX="735.0" layoutY="616.0" prefHeight="49.0" prefWidth="499.0" />

            <Button fx:id="createTeamButton" layoutX="873.0" layoutY="699.0"
                    onAction="#handleCreateTeam" prefHeight="95.0" prefWidth="229.0" text="Create">
                <font><Font size="33.0" /></font>
            </Button>

        </AnchorPane>
    </children>
</VBox>
