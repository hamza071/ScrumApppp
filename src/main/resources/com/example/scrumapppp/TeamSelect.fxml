<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.scrumapppp.Controller.TeamSelectController">
    <children>
        <AnchorPane prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>

                <!-- Title Label -->
                <Label alignment="CENTER" layoutX="747.0" layoutY="148.0" prefHeight="82.0" prefWidth="486.0" text="Join Team" textAlignment="CENTER">
                    <font>
                        <Font size="33.0" />
                    </font>
                </Label>

                <!-- Label for Team Code -->
                <Label layoutX="591.0" layoutY="298.0" text="Team Code">
                    <font>
                        <Font size="21.0" />
                    </font>
                </Label>

                <!-- TextField voor team naam of code -->
                <TextField fx:id="teamNaamField1" layoutX="740.0" layoutY="289.0" prefHeight="49.0" prefWidth="499.0" />

                <!-- Join Team knop -->
                <Button fx:id="joinTeamButton" layoutX="875.0" layoutY="428.0" mnemonicParsing="false"
                        onAction="#handleJoinButtonClick" prefHeight="95.0" prefWidth="229.0" text="Join Team">
                    <font>
                        <Font size="33.0" />
                    </font>
                </Button>

                <!-- Create Team knop -->
                <Button fx:id="createTeamButton" layoutX="875.0" layoutY="657.0" mnemonicParsing="false"
                        onAction="#handleCreateButtonClick" prefHeight="95.0" prefWidth="229.0" text="Create Team">
                    <font>
                        <Font size="33.0" />
                    </font>
                </Button>

            </children>
        </AnchorPane>
    </children>
</VBox>